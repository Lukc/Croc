doctype html
html
  head
    title Reservation
    link(rel='stylesheet', href='/bootstrap/css/bootstrap.css')
    link(rel='stylesheet', href='/bootstrap/css/bootstrap-theme.css')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js')
    link(rel='stylesheet', href='https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.4/themes/smoothness/jquery-ui.css')
    script(src='https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.4/jquery-ui.min.js')
    script(src='/javascripts/reservation.js')
    link(rel="stylesheet", href="/css/reservation.css")
  body
      .container
        .row
          h2 Réservation Croc
        .row
          .col-lg-2
            input(name="nameCroc", type="text", placeholder="Nom")
            br
            br
            input(value="menu" type="radio" name="menu" id="menu" onchange="afficheMenu()" checked)  
            label(for="menu") Menu
            input(value="croc" type="radio" name="menu" id="croc" onchange="afficheMenu()")
            label(for="croc") Simple Croc
            input(value="choco" type="radio" name="menu" id="choco" onchange="afficheMenu()") 
            label(for="choco") Croc choco
          .col-lg-4       
            #commande
          .col-lg-2      
            button(onclick="envoiCroc()") Réserver
            #prixCroc 2,30€
          .row
            table.table.table-bordered.table-striped.table-condensed
              caption 
                h3 Liste des Crocs
                button(onclick="rechargerListe()") Recharger
                h4 Nombre de croc salé : 
                span#sale
                h4 Nombre de croc sucre : 
                span#sucre
              thead
                tr
                  th Nom
                  th Croc 1
                  th Croc 2
                  th Heure
                  th Prix
                  th Payer
                  th Servi
                  th Annuler
              tbody#listeCrocs
              tfoot
                tr
                  th Nom
                  th Croc 1
                  th Croc 2
                  th Heure
                  th Prix
                  th Payer
                  th Servi
                  th Annuler
    script.
      afficheMenu();
      rechargerListe();
